[user]
	name = Brian Snyder
	email = bsnyder@idirect.net
[core]
	editor = vim
	pager  = less -eiFRX	
	excludesfile = /home/bsnyder/.gitignore
[merge]
	tool = vimdiff

[alias]
	#pom = push origin master
	pgm = push github master
	b = branch
	ba = branch -avv
	ci = commit
	co = checkout
	d = diff
	ds = diff --stat
	dc = diff --cached
	dcs = diff --cached --stat
	dno = diff --name-only
	fp = format-patch
	lg = log --graph
	lgo = log --graph --pretty=oneline --abbrev-commit
	lf  =  log --graph --pretty=format:'%h %an -%d %s (%cr)' --abbrev-commit --date=relative
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --date=short	
	k = !gitk &
	ka = !gitk --all &
	lc = log ORIG_HEAD.. --stat --no-merges
	lp = log --patch-with-stat
	mnf = merge --no-ff
	mnff = merge --no-ff
	mt = mergetool
	p = format-patch -1
	serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
	sra = svn rebase --all
	sh = !git-sh
	ssu = status -s -uno
	st = status
	stm = status --untracked=no
	stfu = status --untracked=no
	pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'
