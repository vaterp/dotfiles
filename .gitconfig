[user]
	name = Brian Snyder
	email = bsnyder@idirect.net
[core]
	editor = vim
	pager  = less -eiFRX	
	excludesfile = /home/bsnyder/.gitignore
[merge]
	tool = vimdiff

[alias]
	#pom = push origin master
	pgm = push github master
	b = branch -v
	ba = branch -avv
	ci = commit
	co = checkout
	d = diff  --color
	ds = diff --stat
	dc = diff --cached
	dcs = diff --cached --stat
	dno = diff --name-only
	fp = format-patch
	histg = log --pretty=format:'%h %C(red bold)%ad%Creset | %s %C(green)%d %C(bold blue)[%an]%Creset' --date=short	--graph 
  hist  = log --pretty=format:'%h %ad | %s %C(green)%d %C(bold blue)[%an]%Creset' --date=short	
	k = !gitk &
	ka = !gitk --all &
	lc = log ORIG_HEAD.. --stat --no-merges
	lp = log --patch-with-stat
	mnf = merge --no-ff
	mnff = merge --no-ff
	mt = mergetool
	p = format-patch -1
	serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
	sra = svn rebase --all
	sh = !git-sh
	ssu = status -s -uno
	st = status
	sno = show --name-only
	stfu = status --untracked=no
	pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'
	who = shortlog -s
[color]
	ui = auto
